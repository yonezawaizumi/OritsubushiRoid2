<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_span="3" >

            <CheckBox
                android:id="@+id/comp_date_edit_incomp_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/comp_date_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/comp_date_edit_incomp_button"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp"><requestFocus/></TextView>

        </RelativeLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

		<com.wsf_lp.oritsubushi.customs.NumberPickerCompat
		    android:id="@+id/comp_date_edit_year"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:focusable="true"
		    android:focusableInTouchMode="true" />

		<com.wsf_lp.oritsubushi.customs.NumberPickerCompat
		    android:id="@+id/comp_date_edit_month"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:focusable="true"
		    android:focusableInTouchMode="true" />

		<com.wsf_lp.oritsubushi.customs.NumberPickerCompat
		    android:id="@+id/comp_date_edit_day"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:focusable="true"
		    android:focusableInTouchMode="true" />

					</TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ToggleButton
            android:id="@+id/comp_date_edit_0year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textOff="@string/comp_date_edit_0year"
            android:textOn="@string/comp_date_edit_0year"
            android:textSize="13sp" />

        <ToggleButton
            android:id="@+id/comp_date_edit_0month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textOff="@string/comp_date_edit_0month"
            android:textOn="@string/comp_date_edit_0month"
            android:textSize="13sp" />

        <ToggleButton
            android:id="@+id/comp_date_edit_0day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textOff="@string/comp_date_edit_0day"
            android:textOn="@string/comp_date_edit_0day"
            android:textSize="13sp" />

    </TableRow>

</TableLayout>